{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": [
			"ES2022"
		],
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"exclude": [
		"./dist",
		"./node_modules"
	],
	"include": ["types/**/*.d.ts", "src/**/*.ts"]
}
